{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": ["src"]
}

